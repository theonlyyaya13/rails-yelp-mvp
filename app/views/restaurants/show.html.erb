<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<h2>Reviews</h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %> - Rating: <%= review.rating %></li>
  <% end %>
</ul>

<h3>Add a review</h3>
<%= simple_form_for [@restaurant, @restaurant.reviews.new] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit 'Add Review', class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to restaurants', restaurants_path, class: "btn btn-secondary" %>
